<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/designcontentprogress">



    <TextView
        android:padding="3dp"
        android:id="@+id/titleProgress"
        style="@style/progresTitle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="titulo"

        android:background="@drawable/designtitleprogress"/>
    <ProgressBar

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/messageProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        style="@style/progresInfo"
        android:text="Por favor Espere ..!"
        android:gravity="center"
        android:layout_marginBottom="15dp"

        />







</LinearLayout>
