<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="1mm"
        android:layout_marginLeft="1mm"
        android:layout_marginRight="1mm"

        android:background="@drawable/designbtnline">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:layout_margin="1.5mm"
                android:layout_width="18mm"
                android:layout_height="15mm"
                android:src="@drawable/vehiculo"

                />

        </LinearLayout>


        <LinearLayout

            android:layout_width="180dp"
            android:layout_height="wrap_content"


            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">




            <TextView
                style="@style/infolista"
                android:id="@+id/VehiListPlaca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.1mm"
                android:text="placa " />

            <TextView
                style="@style/infolista"
                android:id="@+id/VehiListColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.1mm"
                android:text="color " />


            <TextView
                style="@style/infolista"
                android:id="@+id/VehiListTipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.1mm"
                android:text="Tipo " />

            <TextView
                style="@style/infolista"
                android:id="@+id/VehiListMarca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.1mm"
                android:text="Modelo " />


        </LinearLayout>




        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end|right">

            <ImageView
                android:id="@+id/eraseVehi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_delete_black_24dp"
                android:tint="@color/ColorTitleProgress"/>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
