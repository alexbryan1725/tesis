<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".registerActivity"
    android:id="@+id/relativeRegister">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                style="@style/texto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:gravity="center"
                android:text="Registrarse" />


            <EditText

                style="@style/txt"
                android:id="@+id/TxtAddClieCed"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/ic_credit_card"
                android:hint="Cédula"
                android:inputType="number"
                android:maxLength="10"

                />


            <EditText
                android:id="@+id/TxtAddClieNombres"
                style="@style/txt"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/ic_person"
                android:hint="Nombres"
                android:inputType="text"

                />


            <EditText
                android:id="@+id/TxtAddClieApellidos"
                style="@style/txt"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"

                android:drawableLeft="@drawable/ic_person"

                android:hint="Apellidos"
                android:inputType="text"

                />


            <EditText
                android:id="@+id/TxtAddClieTelefono"
                style="@style/txt"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/ic_phone"
                android:hint="Teléfono"
                android:inputType="number"
                android:maxLength="10"

                />


            <EditText
                style="@style/txt"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/TxtAddCliedirec"
                android:drawableLeft="@drawable/ic_person"
                android:hint="Dirección"
                android:inputType="text"

                />


            <EditText
                android:id="@+id/TxtAddClieCorreo"
                style="@style/txt"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"

                android:drawableLeft="@drawable/ic_email"

                android:hint="E-mail"
                android:inputType="textWebEmailAddress"

                />

            <EditText
                android:id="@+id/TxtAddCliePswd"
                style="@style/txt"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"

                android:drawableLeft="@drawable/ic_key"

                android:hint="Contraseña"
                android:inputType="textPassword"

                />

            <EditText
                android:id="@+id/TxtAddCliePswd2"
                style="@style/txt"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"

                android:drawableLeft="@drawable/ic_key"

                android:hint="Contraseña"
                android:inputType="textPassword"

                />


            <Button

                android:onClick="register"
                android:background="@drawable/designbtnline"
                android:id="@+id/BtnAdminSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Guardar" />

            <Button

                android:textColor="@color/colorWhite"
                android:layout_marginTop="10dp"
                android:background="@drawable/desingbtnrelleno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancelar" />


        </LinearLayout>


    </ScrollView>

</RelativeLayout>