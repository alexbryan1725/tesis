<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentsUserAdmin.AddCobUserFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5mm">


            <EditText
                android:id="@+id/TxtTrabInsertCed"
                style="@style/txt"
                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:layout_marginBottom="10dp"

                android:drawableLeft="@drawable/ic_credit_card"
                android:hint="Cédula"


                />


            <EditText
                android:id="@+id/TxtTrabInsertNombres"
                style="@style/txt"
                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:layout_marginBottom="10dp"

                android:drawableLeft="@drawable/ic_person"
                android:hint="Nombres"


                />


            <EditText
                android:id="@+id/TxtTrabInsertApellidos"
                style="@style/txt"
                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:layout_marginBottom="10dp"

                android:drawableLeft="@drawable/ic_person"


                android:hint="Apellidos" />


            <EditText
                android:id="@+id/TxtTrabInsertTelefono"
                style="@style/txt"
                android:layout_width="match_parent"

                android:layout_height="30dp"

                android:drawableLeft="@drawable/ic_phone"
                android:hint="Teléfono" />


            <EditText
                android:id="@+id/TxtTrabInsertdirec"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_person"
                style="@style/txt"

                android:hint="Dirección"
                />


            <EditText
                android:id="@+id/TxtTrabInsertCorreo"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"

                android:drawableLeft="@drawable/ic_email"

                style="@style/txt"
                android:hint="E-mail"
                />



            <Button
                android:background="@drawable/designbtnline"
                android:id="@+id/BtnTrabSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Guardar" />

            <Button
                android:layout_marginTop="25dp"
                android:background="@drawable/desingbtnrelleno"
                android:id="@+id/BtnTrabCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancelar" />


        </LinearLayout>


    </ScrollView>

</FrameLayout>