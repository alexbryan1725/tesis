<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="FragmentsUserAdmin.MakeCobroFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5mm">

        <TextView
            style="@style/texto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="Crear Cobro" />

        <TextView
            style="@style/texto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="Ingrese nÃºmero de placa"
            android:fontFamily="@font/gothic"/>


        <EditText

            android:id="@+id/TxtMakeCobroPlaca"
            style="@style/txt"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:hint="(ABC0000)"
            android:inputType="text"
            android:maxLength="7"
            android:textSize="50dp"

            android:fontFamily="@font/gothicbold"
            android:gravity="center"

            />





        <Button
            android:id="@+id/BtnCheckCobro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/designbtnline"
            android:text="Guardar" />




    </LinearLayout>


</FrameLayout>