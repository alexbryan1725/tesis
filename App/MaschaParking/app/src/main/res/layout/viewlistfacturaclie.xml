<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/designbtnline"
        >

        <TextView
            android:id="@+id/lablFacTitle"
            android:fontFamily="@font/gothicbold"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textSize="15dp"
            android:text="Finalizado"
            android:textColor="@android:color/white"
            android:background="@drawable/designtitlelistgreen"

            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="1mm"
                android:layout_marginRight="1mm"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:src="@drawable/vehiculo" />

                <TextView
                    android:id="@+id/lblClieFacPlaca"
                    style="@style/infolista"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gothicbold"
                    android:gravity="center"
                    android:text="ABC9999"
                    android:textSize="20dp"

                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblClieFacNombreParq"
                    style="@style/infolista"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.1mm"
                    android:gravity="center"
                    android:text="Nombre Parqueadero" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/infolista"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Id: " />

                    <TextView
                        android:id="@+id/lblClieFacId"
                        style="@style/listaGotic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0.1mm"
                        android:text="id factura" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/infolista"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Entrada: " />

                    <TextView
                        android:id="@+id/lblClieFacIngreso"
                        style="@style/listaGotic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0.1mm"
                        android:text="fecha de inicio " />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/infolista"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salida: " />

                    <TextView

                        android:id="@+id/lblClieFacSalida"
                        style="@style/listaGotic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0.1mm"
                        android:text="fecha Fin " />

                </LinearLayout>

                <!--     <LinearLayout
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal">

                         <TextView
                             style="@style/infolista"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Tiempo total: " />

                         <TextView
                             android:id="@+id/lblClieFacTiempo"
                             style="@style/listaGotic"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_marginBottom="0.1mm"
                             android:text="tiempo de estadia " />

                     </LinearLayout>
           -->


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_icons_bolsa_de_dinero"
                    android:tint="@color/ColorGold"

                    />

                <TextView
                    android:id="@+id/lblClieFacPrecio"
                    style="@style/infolista"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="$3.50" />


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
