<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.UserEditFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5mm">


            <EditText
                android:id="@+id/TxtUserEditCed"
                style="@style/txt"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/ic_credit_card"
                android:hint="Cédula"
                android:inputType="number"
                android:maxLength="10"


                />


            <EditText
                android:id="@+id/TxtUserEditNombres"
                style="@style/txt"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/ic_person"

                android:hint="Nombres"
                android:inputType="text"


                />


            <EditText
                android:id="@+id/TxtUserEditApellidos"
                style="@style/txt"
                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:layout_marginBottom="10dp"

                android:drawableLeft="@drawable/ic_person"

                android:hint="Apellidos"
                android:inputType="text" />


            <EditText
                android:id="@+id/TxtUserEditTelefono"
                style="@style/txt"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/ic_phone"
                android:hint="Teléfono"

                android:inputType="number"
                android:maxLength="10" />


            <EditText
                android:id="@+id/TxtUserEditdirec"
                style="@style/txt"
                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/ic_person"
                android:hint="Dirección"
                android:inputType="text" />


            <EditText
                android:id="@+id/TxtUserEditCorreo"
                style="@style/txt"
                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/ic_email"
                android:hint="E-mail"
                android:inputType="textEmailAddress" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext">

                <Spinner


                    android:id="@+id/SpinerUserEdit"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:autofillHints="ddd"

                    />
            </LinearLayout>

            <Switch
                android:id="@+id/SwitchUserEditHab"
                style="@style/txt"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:text="Hablilitado" />


            <Button
                android:id="@+id/BtnUserEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Guardar" />

            <Button
                android:id="@+id/BtnUserCancelEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancelar" />


        </LinearLayout>


    </ScrollView>

</FrameLayout>