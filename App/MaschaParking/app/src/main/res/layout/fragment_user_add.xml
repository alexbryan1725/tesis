<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.UserAddFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5mm">


            <EditText
                android:id="@+id/TxtUserInsertCed"
                style="@style/txt"
                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:layout_marginBottom="10dp"

                android:drawableLeft="@drawable/ic_credit_card"
                android:hint="Cédula"


                />


            <EditText
                android:id="@+id/TxtUserInsertNombres"
                style="@style/txt"
                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:layout_marginBottom="10dp"

                android:drawableLeft="@drawable/ic_person"
                android:hint="Nombres"


                />


            <EditText
                android:id="@+id/TxtUserInsertApellidos"
                style="@style/txt"
                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:layout_marginBottom="10dp"

                android:drawableLeft="@drawable/ic_person"


                android:hint="Apellidos" />


            <EditText
                android:id="@+id/TxtUserInsertTelefono"
                style="@style/txt"
                android:layout_width="match_parent"

                android:layout_height="30dp"

                android:drawableLeft="@drawable/ic_phone"
                android:hint="Teléfono" />


            <EditText
                android:id="@+id/TxtUserInsertdirec"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_person"
                style="@style/txt"

                android:hint="Dirección"
                />


            <EditText
                android:id="@+id/TxtUserInsertCorreo"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"

                android:drawableLeft="@drawable/ic_email"

               style="@style/txt"
                android:hint="E-mail"
              />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext">

                <Spinner


                    android:id="@+id/SpinerUserInsert"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:autofillHints="ddd"

                    />
            </LinearLayout>

            <Button
                android:id="@+id/BtnUserSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Guardar" />

            <Button
                android:id="@+id/BtnUserCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancelar" />


        </LinearLayout>


    </ScrollView>

</FrameLayout>